#!/bin/bash

if [ $# -ne 2 ]; then
    echo "Usage: $0 <destination_directory> <zip_file>"
    exit 1
fi

DESTINATION_DIR="$1"
ZIP_ARCHIVE="$2"

FOLDERS_TO_RESTORE=("config" "defaultconfigs" "modernfix" "mods" "schematics")

if [ ! -d "$DESTINATION_DIR" ]; then
    echo "‚ùå Destination directory does not exist: $DESTINATION_DIR"
    exit 1
fi

if [ ! -f "$ZIP_ARCHIVE" ]; then
    echo "‚ùå ZIP file does not exist: $ZIP_ARCHIVE"
    exit 1
fi


FIRST_FOLDER="$DESTINATION_DIR/${FOLDERS_TO_RESTORE[0]}"
if [ -d "$FIRST_FOLDER" ]; then
    ORIGINAL_OWNER=$(stat -c '%U:%G' "$FIRST_FOLDER")
    echo "üë§ Original owner detected: $ORIGINAL_OWNER"
else
    ORIGINAL_OWNER=""
    echo "‚ö† First folder not found, will skip ownership restoration"
fi


echo "üìÇ Destination directory: $DESTINATION_DIR"
echo "üóú ZIP archive: $ZIP_ARCHIVE"
echo

echo "üßπ Removing old folders..."
for folder in "${FOLDERS_TO_RESTORE[@]}"; do
    target="$DESTINATION_DIR/$folder"
    if [ -d "$target" ]; then
        rm -rf "$target"
        echo "‚úî Removed: $target"
    else
        echo "‚ö† Not found: $target"
    fi
done

echo

echo "üì¶ Extracting folders from ZIP..."
for folder in "${FOLDERS_TO_RESTORE[@]}"; do
    echo "‚û° Extracting: $folder"
    unzip -o "$ZIP_ARCHIVE" "$folder/*" -d "$DESTINATION_DIR" >/dev/null 2>&1
done

echo

if [ -n "$ORIGINAL_OWNER" ]; then
    echo "üîê Restoring ownership to $ORIGINAL_OWNER..."
    for folder in "${FOLDERS_TO_RESTORE[@]}"; do
        target="$DESTINATION_DIR/$folder"
        if [ -d "$target" ]; then
            chown -R "$ORIGINAL_OWNER" "$target"
            echo "‚úî Ownership restored: $target"
        fi
    done
    echo
fi

echo "‚úÖ Process completed successfully."
