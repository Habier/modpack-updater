#!/bin/bash

if [ $# -ne 2 ]; then
    echo "Usage: $0 <destination_directory> <zip_file>"
    exit 1
fi

DESTINATION_DIR="$1"
ZIP_ARCHIVE="$2"

FOLDERS_TO_RESTORE=("config" "defaultconfigs" "modernfix" "mods" "schematics")

if [ ! -d "$DESTINATION_DIR" ]; then
    echo "âŒ Destination directory does not exist: $DESTINATION_DIR"
    exit 1
fi

if [ ! -f "$ZIP_ARCHIVE" ]; then
    echo "âŒ ZIP file does not exist: $ZIP_ARCHIVE"
    exit 1
fi

echo "ðŸ“‚ Destination directory: $DESTINATION_DIR"
echo "ðŸ—œ ZIP archive: $ZIP_ARCHIVE"
echo

echo "ðŸ§¹ Removing old folders..."
for folder in "${FOLDERS_TO_RESTORE[@]}"; do
    target="$DESTINATION_DIR/$folder"
    if [ -d "$target" ]; then
        rm -rf "$target"
        echo "âœ” Removed: $target"
    else
        echo "âš  Not found: $target"
    fi
done

echo

echo "ðŸ“¦ Extracting folders from ZIP..."
for folder in "${FOLDERS_TO_RESTORE[@]}"; do
    echo "âž¡ Extracting: $folder"
    unzip -o "$ZIP_ARCHIVE" "$folder/*" -d "$DESTINATION_DIR" >/dev/null 2>&1
done

echo
echo "âœ… Process completed successfully."
